{
    "name": "jimchen/yii2-facades",
    "description": "Laravel like facades support for Yii 2 application components",
    "type": "yii2-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "JimChen",
            "email": "imjimchen@163.com"
        }
    ],
    "require": {
        "php": ">=5.4",
        "yiisoft/yii2": "~2.0"
    },
    "require-dev": {
        "sergeymakinen/yii2-tests": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "jimchen\\facade\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jimchen\\tests\\facade\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ]
}
